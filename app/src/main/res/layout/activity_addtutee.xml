<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbg">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:src="@drawable/pictureregister"
        android:background="#000000FF"/>

    <LinearLayout
        android:layout_marginTop = "40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText_addTutee_name"
                android:hint="이름"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_addTutee_phone"
                android:layout_marginTop="20dp"
                android:hint="연락처"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/editText_addTutee_home"
                android:hint="주소"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/editText_addTutee_parentPhone"
                android:hint="학부모 연락처"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/editText_addTutee_subject"
                android:hint="과목"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText_addTutee_gender"
                android:hint="성별"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/registerbutton"
        android:background="#000000FF"
        android:layout_gravity="right"
        android:id="@+id/imageButton_addtutee_register"/>

</LinearLayout>